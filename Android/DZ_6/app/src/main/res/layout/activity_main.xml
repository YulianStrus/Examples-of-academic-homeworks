<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:context=".MainActivity"
        app:columnCount="2"
        app:rowCount="3">

        <ImageButton
            android:id="@+id/imageButtonCat"
            android:layout_width="205dp"
            android:layout_height="240dp"
            android:contentDescription="@string/imagecat"
            android:scaleType="centerInside"
            android:src="@drawable/cat"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/imageButtonChicken"
            android:layout_width="205dp"
            android:layout_height="240dp"
            android:contentDescription="@string/imagechicken"
            android:scaleType="centerInside"
            android:src="@drawable/chicken"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/imageButtonCow"
            android:layout_width="205dp"
            android:layout_height="240dp"
            android:contentDescription="@string/imagecow"
            android:scaleType="centerInside"
            android:src="@drawable/cow"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/imageButtonDog"
            android:layout_width="205dp"
            android:layout_height="240dp"
            android:contentDescription="@string/imagedog"
            android:scaleType="centerInside"
            android:src="@drawable/dog"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/imageButtonDuck"
            android:layout_width="205dp"
            android:layout_height="240dp"
            android:contentDescription="@string/imageduck"
            android:scaleType="centerInside"
            android:src="@drawable/duck"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/imageButtonSheep"
            android:layout_width="205dp"
            android:layout_height="240dp"
            android:contentDescription="@string/imagesheep"
            android:scaleType="centerInside"
            android:src="@drawable/sheep"
            app:layout_column="1"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>